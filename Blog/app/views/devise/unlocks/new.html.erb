<div class="container" style = 'font-size:24px'>
        
        <div class="row">
            <div class="col" style="display: flex; justify-content: center; align-items: center;">
                <h1>Resend unlock instructions</h1>
            </div>
        </div>
        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
            <div class="col" style="display: flex; justify-content: center; align-items: center;">
               
            </div>
        </div>

        <div class="row p-2 m-1 mb-2">
            <div class="col " style="display: flex; justify-content: center; align-items: center;">
                <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    <div class = 'text-danger' style="display: flex; justify-content: center; align-items: center;"><%= @user.errors.full_messages_for(:email).first %></div>
                  </div>
            </div>
        </div>

        <div class="row p-2 m-1 mb-2">
            <div class="col" style="display: flex; justify-content: center; align-items: center;">
                <div class="actions">
                    <%= f.submit "Resend unlock instructions" ,class: 'btn btn-primary', style: 'font-size:24px' %>
                  </div>
            </div>
        </div>
        <% end %>
    </div>
   

<%= render "devise/shared/links" %>
