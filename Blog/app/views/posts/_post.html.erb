<div class="container w-50">
    
    <div class="row">
        <div class="col bg-primary text-light mb-2" style="display: flex; justify-content: center; align-items: center;">
            <h1>Posts</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card" style="border-color: #adb5bd; border-radius: 2px; border-width: 1px; background-color: #edf4f4;font-size:24px">
                <div class="card-body" style = "display: flex; justify-content: center; align-items: center;"><% @posts.each do |post| %>
                    <% if post.is_published == true %>
                     
                       <li> <%= link_to post.title, post %> </li>
                                          
                    <% end %>
                    <% end %>
                 </div>
            </div>
        </div>
    </div>

</div>