<div class="container w-50 mt-5">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-light" style="display: flex; justify-content: center; align-items: center;"><h1>Posts</h1></div>
                    <div class="card-body" style="display: flex; justify-content: center; align-items: center;"><ul>
                        <% @posts.each do |post| %>
                          <li>
                            <h4><%= link_to post.title, post %></h4>
                          </li>
                        <% end %>
                      </ul>
                      </div>
                  </div>                  
            </div>
        </div>
    </div>
