


<div class="container w-50 mt-5">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white" style="display: flex; justify-content: center; align-items: center;">
                    
                    <div class = 'row'>
                    <div class = 'col'><h1>Welcome <%= current_user.email%></h1><h3 style="display: flex; justify-content: center; align-items: center;">Find your listings below</h3></div>
                    </div>

                    </div>
                    <div class="card-body" style="display: flex; justify-content: center; align-items: center;"><ul>
                        <% @posts.each do |post| %>
                        <% if current_user.id.to_i == post.user_id.to_i %>
                          <li>
                            <h4><%= link_to post.title, post %></h4>
                          </li>
                          <% end %>
                        <% end %>
                      </ul>
                      </div>
                  </div>                  
            </div>
        </div>
</div>
